                        <Button
                            android:id="@+id/btnStream2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/media_stream_switch"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnCapture2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_capture"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnRecord2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_record"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnScreenRatio2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_fullscreen"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnFishEyeInfo2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_fisheye_info"
                            android:textColor="@drawable/common_text_selector" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 主/辅码流类型显示 -->

                <TextView
                    android:id="@+id/textStreamStat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#80000000"
                    android:padding="5dp"
                    android:textColor="#ffffffff"
                    android:textSize="10dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutPlayWnd3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000">

                <com.lib.funsdk.support.widget.FunVideoView
                    android:id="@+id/funVideoView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textVideoStat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#40000000"
                    android:textColor="#ffffffff"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/layout_recording3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="28dp"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/img_recording3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/recording" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_recording3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="录制中" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:id="@+id/layoutVideoControl3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#6c000000"

                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnPlay3"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_play"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnStop3"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_stop"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnStream3"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/media_stream_switch"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnCapture3"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_capture"
