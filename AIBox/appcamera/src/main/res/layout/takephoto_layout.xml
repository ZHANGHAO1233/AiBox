                    android:background="#40000000"
                    android:textColor="#ffffffff"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/layout_recording2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="28dp"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/img_recording2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/recording" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_recording2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="录制中" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:id="@+id/layoutVideoControl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#6c000000"

                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnPlay2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
                            android:text="@string/device_opt_play"
                            android:textColor="@drawable/common_text_selector" />

                        <Button
                            android:id="@+id/btnStop2"
                            style="@style/video_control_button"
                            android:background="@drawable/video_control_button_selector"
